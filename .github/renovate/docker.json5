{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',

  extends: [
    'docker:enableMajor',
    'docker:pinDigests'
  ],

  packageRules: [
    {
      matchManagers: ['dockerfile'],
      groupName: 'Dockerfile',
      minimumReleaseAge: '7 days',
      matchUpdateTypes: ['major'],
    },
  ],
}